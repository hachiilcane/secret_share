<h1>Listing directories</h1>

<p>
  <%= link_to 'Scan Directory', [ :scan, :directories ], :method => :post %>
</p>

<table>
  <tr>
    <th>Path</th>
    <th>Modified at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @directories.each do |directory| %>
  <tr>
    <td><%= directory.path %></td>
    <td><%= directory.modified_at %></td>
    <td><%= link_to 'Photos', [ directory, :photos ] %></td>
    <td><%= link_to 'Show', directory %></td>
    <td><%= link_to 'Edit', edit_directory_path(directory) %></td>
    <td><%= link_to 'Destroy', directory, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Directory', new_directory_path %>
